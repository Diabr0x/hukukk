@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Görevlerim";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Görevlerim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome eklentisi için -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-wAqZEt47Bg2P7DLOxsgd4eJHlMzL7dWh5ycnPHWxpH2OoABHvDD/1XsJ6S6shbwB1SmqR94dcXeTtyA4FjBLuQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        @@-webkit-keyframes color-transition {
            0% { background-color: #f8f9fa; color: #212529; } /* Başlangıç rengi */
            50% { background-color: #f8d7da; color: #721c24; } /* Geçiş rengi */
            100% { background-color: #f8f9fa; color: #212529; } /* Son renk */
        }

        body {
            animation: color-transition 10s infinite; /* Geçiş süresi ve tekrar sayısı */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .table-striped {
            animation: color-transition 5s infinite; /* Geçiş süresi ve tekrar sayısı */
        }

        .table th, .table td {
            border-top: none;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="mb-4">Görevlerim</h1>
                <p class="lead">Hoş Geldiniz <i class="fas fa-user"></i>, @ViewData["UserName"] (Kullanıcı ID: @ViewData["UserID"])</p>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Görev Adı</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Müvekkil</th>
                                <th scope="col">Duruşma Tarihi</th>
                                <th scope="col">Davanın Durumu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var gorev in ViewBag.Gorevler)
                            {
                                <tr>
                                    <td>@gorev.GorevAdi</td>
                                    <td>@gorev.GorevAciklama</td>
                                    <td>@gorev.Muvekkil</td>
                                    <td>@gorev.DurusmaTarihi</td>
                                    <td>@gorev.DavaninDurumu</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
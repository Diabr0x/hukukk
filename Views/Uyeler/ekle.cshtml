@model hukukk.Models.UyelerModel

@{
    Layout = "~/Views/Shared/_adminlayout.cshtml";
    ViewData["Title"] = "Üye Ekle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }

        .btn-primary {
            width: 100%;
        }

        .back-link {
            margin-top: 20px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1>@ViewData["Title"]</h1>
                <hr />
                <form asp-action="ekle">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Adi_Soyadi" class="control-label">Adı Soyadı:</label>
                        <input asp-for="Adi_Soyadi" class="form-control" />
                        <span asp-validation-for="Adi_Soyadi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TelefonNo" class="control-label">Telefon Numarası:</label>
                        <input asp-for="TelefonNo" class="form-control" />
                        <span asp-validation-for="TelefonNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Unvan" class="control-label">Ünvanı:</label>
                        <input asp-for="Unvan" class="form-control" />
                        <span asp-validation-for="Unvan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Kullanici" class="control-label">Kullanıcı Adı:</label>
                        <input asp-for="Kullanici" class="form-control" />
                        <span asp-validation-for="Kullanici" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sifre" class="control-label">Şifre:</label>
                        <input asp-for="Sifre" class="form-control" type="password" />
                        <span asp-validation-for="Sifre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email:</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Üye Ekle" class="btn btn-primary" />
                    </div>
                </form>
                <a asp-action="düzenle" class="back-link">Listeye Geri Dön</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
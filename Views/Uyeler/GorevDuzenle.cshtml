@model hukukk.Models.GorevModel

@{
    ViewData["Title"] = "Görev Düzenle";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
    }

    .container {
        margin-top: 50px;
    }

    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        background-color: #007bff;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .back-link {
        display: inline-block;
        text-align: center;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .back-link:hover {
            color: #0056b3;
        }
</style>

<div class="container">
    <h1 class="text-center mb-4">Görev Düzenle</h1>

    <form asp-action="GorevDuzenle">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="control-label">ID:</label>
            <input asp-for="Id" class="form-control" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="KullaniciId" class="control-label">Kullanıcı ID:</label>
            <input asp-for="KullaniciId" class="form-control" readonly />
            <span asp-validation-for="KullaniciId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GorevAdi" class="control-label">Görev Adı:</label>
            <input asp-for="GorevAdi" class="form-control" />
            <span asp-validation-for="GorevAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GorevAciklama" class="control-label">Görev Açıklama:</label>
            <textarea asp-for="GorevAciklama" class="form-control"></textarea>
            <span asp-validation-for="GorevAciklama" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Muvekkil" class="control-label">Müvekkil:</label>
            <input asp-for="Muvekkil" class="form-control" />
            <span asp-validation-for="Muvekkil" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DavaninDurumu" class="control-label">Davanın Durumu:</label>
            <select asp-for="DavaninDurumu" class="form-control">
                <option value="Başlamadı">Başlamadı</option>
                <option value="Devam Ediyor">Devam Ediyor</option>
                <option value="Sonuçlandı">Sonuçlandı</option>
            </select>
            <span asp-validation-for="DavaninDurumu" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DurusmaTarihi" class="control-label">Durum Tarihi:</label>
            <input asp-for="DurusmaTarihi" class="form-control" />
            <span asp-validation-for="DurusmaTarihi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tarih" class="control-label">Tarih:</label>
            <input asp-for="Tarih" class="form-control" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
        </div>
    </form>

    <div class="text-center">
        <a asp-action="Gorevler" class="btn btn-secondary btn-block mt-3">Listeye Geri Dön</a>
    </div>
</div>
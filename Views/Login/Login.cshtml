@{
    Layout = "~/Views/Shared/_yenilayout.cshtml";
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
            position: relative;
            background: linear-gradient(to right, #667eea, #764ba2);
            background-size: 400% 400%;
            animation: gradientAnimation 15s ease infinite;
        }

        .background {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .background::before {
                content: '';
                position: absolute;
                width: 200%;
                height: 200%;
                top: -50%;
                left: -50%;
                background: inherit;
                opacity: 0.7;
                filter: blur(30px);
            }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: move 25s ease-in-out infinite;
            mix-blend-mode: overlay;
            opacity: 0.8;
        }

            .shape:nth-child(1) {
                width: 150px;
                height: 150px;
                top: 10%;
                left: 20%;
            }

            .shape:nth-child(2) {
                width: 100px;
                height: 100px;
                top: 30%;
                left: 70%;
            }

            .shape:nth-child(3) {
                width: 120px;
                height: 120px;
                top: 60%;
                left: 40%;
            }

            .shape:nth-child(4) {
                width: 180px;
                height: 180px;
                top: 80%;
                left: 10%;
            }

        @@-webkit-keyframes gradientAnimation {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        @@-webkit-keyframes move {
            0% {
                transform: translateY(0) translateX(0);
            }

            50% {
                transform: translateY(-30px) translateX(30px);
            }

            100% {
                transform: translateY(0) translateX(0);
            }
        }

        .card {
            width: 400px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            background: rgba(255, 255, 255, 0.85);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            z-index: 1;
            backdrop-filter: blur(10px);
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            }

        .card-header {
            background: linear-gradient(to right, #764ba2, #667eea);
            color: #fff;
            padding: 20px;
            text-align: center;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-body {
            padding: 30px;
        }

        .form-group label {
            font-weight: bold;
            margin-bottom: 10px;
            color: #555;
            display: block;
        }

        .form-control {
            border: none;
            border-radius: 5px;
            padding: 12px;
            width: 100%;
            margin-bottom: 20px;
            background-color: #f0f0f0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                background-color: #e0e0e0;
                outline: none;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-primary {
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            color: white;
            padding: 12px 20px;
            width: 100%;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            outline: none;
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .btn-primary:hover {
                filter: brightness(1.1);
                transform: translateY(-2px);
            }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .form-footer {
            text-align: center;
            margin-top: 20px;
        }

            .form-footer a {
                color: #764ba2;
                text-decoration: none;
                font-weight: bold;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Giriş Yap</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            }
            <form method="post" action="/Login/Login">
                <div class="form-group">
                    <label for="Kullanici">Kullanıcı Adı</label>
                    <input type="text" id="Kullanici" name="Kullanici" class="form-control" placeholder="Kullanıcı Adı" required>
                </div>
                <div class="form-group">
                    <label for="Sifre">Şifre</label>
                    <input type="password" id="Sifre" name="Sifre" class="form-control" placeholder="Şifre" required>
                </div>
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </form>
        </div>
    </div>
</body>
</html>